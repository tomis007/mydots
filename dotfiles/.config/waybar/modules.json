{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 4
        }
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*)Mozilla Firefox": "Firefox"
        },
	"icon": true,
        "format": "{title}"
    },


    // Clock
    "clock": {
        "format": "{:%H%M}",
        "tooltip": false
    },

    // CPU
    "cpu": {
	"interval": 15,
	"format": "  {}%",
	"max-length": 10
    },

    // Memory
    "memory": {
	"interval": 30,
	"format": "  {used:0.1f}G/{total:0.1f}G",
	"max-length": 25
    },

     "custom/exit": {
       "format": "",
       "on-click": "~/.config/rofi/powermenu.sh",
       "tooltip-format": "Power menu"
     },

    //Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "cpu",
            "memory"
        ]
    }
}
